{
  "extends": "airbnb-base",
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "globals": {
    "window": true,
    "document": true
  },
  "rules": {
    "no-plusplus": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["./gulpfile.babel.js/**/*"]
    }]
  }
}
